<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A7A2D"
    tools:context=".activity.GroupActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <Button
        android:id="@+id/dugme1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="track"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_orange_corner_radius"
        app:layout_constraintBottom_toTopOf="@+id/dugme2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/dugme2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="participants"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_orange_corner_radius"
        app:layout_constraintBottom_toTopOf="@id/dugme3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dugme1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <Button
        android:id="@+id/dugme3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chat"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_orange_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dugme2"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>